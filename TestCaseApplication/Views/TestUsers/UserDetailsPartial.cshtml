<div id="user-details" style="display:none">

    <button data-bind="click:hideDetailsUser" class="btn btn-primary">Back</button>

    <h3>User details</h3>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd data-bind="text: selectedUser != '' ? selectedUser().ID : ''"></dd>
        <dt>Name</dt>
        <dd data-bind="text: selectedUser != '' ? selectedUser().Name : ''"></dd>
        <dt>Email</dt>
        <dd data-bind="text: selectedUser != '' ? selectedUser().Email : ''"></dd>
    </dl>
    <h3>Todo entries</h3>
    <div style="margin-bottom:5px;">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#newTodoEntryModal">
            Create new todo entry
        </button>
    </div>
    <table class="table table-hover table-condensed">
        <tr data-bind="click: function(){sortFunction(true)}">
            <th id="ID">ID</th>
            <th id="Title">Title</th>
            <th id="Description">Description</th>
            <th id="Type">Type</th>
        </tr>
        <tbody data-bind="foreach:selectedUser != '' ? selectedUser().TodoEntries : []">
            <tr>
                <td data-bind="text: ID"></td>
                <td data-bind="text: Title"></td>
                <td data-bind="text: Description"></td>
                <td data-bind="text: Type"></td>
            </tr>
        </tbody>
    </table>
</div>
